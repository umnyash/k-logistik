  "author": "umnyash",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "2.0.8",
    "autoprefixer": "10.4.17",
    "browser-sync": "3.0.2",
    "del": "7.1.0",
    "eslint": "8.56.0",
    "eslint-config-htmlacademy": "10.0.1",
    "gulp": "4.0.2",
    "gulp-if": "3.0.0",
    "gulp-newer": "1.4.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.1.0",
    "gulp-pug": "5.0.0",
    "gulp-rename": "2.0.0",
    "gulp-sass": "5.1.0",
    "gulp-sass-glob": "1.1.0",
    "gulp-stacksvg": "3.0.0",
    "gulp-svgmin": "4.1.0",
    "gulp-webp": "5.0.0",
    "postcss-csso": "6.0.1",
    "postcss-scss": "4.0.9",
    "sass": "1.70.0",
    "stylelint": "16.2.1",
    "stylelint-config-htmlacademy": "4.0.5",
    "webpack": "5.90.1",
    "webpack-stream": "7.0.0"
  },
  "browserslist": [
    "last 4 versions",
    "not dead",
    "not op_mini all",
    "not < 0.25%"
