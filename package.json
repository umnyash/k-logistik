  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/pug/**/*.pug",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "engines": {
    "node": ">=20.11.0"
  }
