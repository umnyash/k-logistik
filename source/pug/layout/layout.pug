block variables

//- include ../mock/data
include ../components/components

doctype html
html.page(class= pageClass lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    //- link(rel='preload' href='fonts/merriweatherregular.woff2' as='font' type='font/woff2' crossorigin)

    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet")

    link(rel='stylesheet' href='css/style.min.css')
    title= title
    link(rel='icon' href='favicon.ico')
    link(rel='icon' href='img/favicons/favicon.svg' type='image/svg+xml')
    link(rel='apple-touch-icon' href='img/favicons/favicon-180.png')
    link(rel='manifest' href='manifest.webmanifest')
    meta(name='description' content='«K LOGISTIK» — доставка товаров в Россию из любой точки мира.')
    meta(name='keywords' content='K LOGISTIK, доставка.')
  body.page__body
    .page__inner
      +site-header(class='page__site-header')
      main.page__content
        block content
      +site-footer(class='page__site-footer')
    block modals
    script(src='vendor/pristine/pristine.min.js')
    script(src='js/script.min.js')
