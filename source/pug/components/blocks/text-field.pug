mixin text-field({ label, name, type, placeholder, isRequired, maxLength, size })
  .text-field(class= size ? `text-field--size_${size}` : false)&attributes(attributes)
    label.text-field__inner
      span.visually-hidden= label
      span.text-field__control-wrapper
        input.text-field__control(name= name, type= type, placeholder= placeholder, required= isRequired || false, maxlength= maxLength || false)
    block
